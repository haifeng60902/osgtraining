Import('env')

#--------------------------------------#

target = 'renderApi'

libs = ['LogInfo'
		]

external_libs = ['dx11']

#--------------------------------------#

sources = env.RGlob("*.cpp")

headers = env.Glob("*.h")

#--------------------------------------#

env.edStaticLibrary(
	target=target,
	source=sources,
	header=headers,
	libs=libs,
	external_libs=external_libs,

	CPPPATH=[
		env['TOP_DIR']+'src/LogInfo'
	],
	CPPDEFINES = [
		'RENDER_API_EXPORTS=EDSIM_DLL_EXPORT'
		]
)
